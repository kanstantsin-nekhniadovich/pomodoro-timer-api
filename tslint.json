{
  "defaultSeverity": "error",
  "extends": "tslint-config-standard",
  "jsRules": {},
  "rules": {
    "semicolon": [true, "always"],
    "trailing-comma": [true, {
      "multiline": "always",
      "singleline": "never"
    }],
    "space-before-function-paren": [true, {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "no-any": true,
    "no-floating-promises": false
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": [
      "src/prisma-client/*"
    ]
  }
}
